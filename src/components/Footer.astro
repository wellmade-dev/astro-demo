---
import Social from "./Social.astro";
---

<footer>
  <div class="divider"></div>
  <div class="social-w">
    <Social platform="instagram" username="samuelbroomby" />
    <Social platform="github" username="wellmade-dev" />
  </div>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }
  .divider {
    width: 100%;
    height: 1px;
    background-color: #cdcdcd;
  }
  .social-w {
    display: flex;
    gap: 0.5rem;
    flex-direction: row;
  }
</style>
